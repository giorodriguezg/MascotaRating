<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:titleTextAppearance="@style/Card.Title"
    >

    <RelativeLayout
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    >


        <ImageView
            android:id="@+id/huella"
            android:layout_width="32dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icons8_cat_footprint_24"
            android:layout_alignParentLeft="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:text="Petagram"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/star_hotel"
            android:layout_width="44dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/menu"
            android:layout_toStartOf="@+id/menu"
            android:background="@color/colorPrimary"
            android:onClick="irRating"
            android:scaleType="centerCrop"
            android:src="@drawable/star_hotel" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/icons8_menu_vertical_24" />


</RelativeLayout>
</android.support.v7.widget.Toolbar>
